{
  "name": "react-media-viewer",
  "version": "0.1.0",
  "description": "Headless, extensible media viewer for React. PDFs, images, video, audio, and YouTube.",
  "author": "Nico Knoll",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicoknoll/react-media-viewer.git"
  },
  "homepage": "https://github.com/nicoknoll/react-media-viewer",
  "keywords": [
    "react",
    "media",
    "viewer",
    "pdf",
    "image",
    "video",
    "audio",
    "youtube",
    "headless",
    "plugin"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "pdfjs-dist": "^4.10.38"
  },
  "devDependencies": {
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "prettier": "^3.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  }
}
